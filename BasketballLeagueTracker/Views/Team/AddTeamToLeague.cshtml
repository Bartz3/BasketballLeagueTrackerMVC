@model List<Team>
@{
    ViewData["Title"] = "Dostępne drużyny";
    var leagueName = @TempData["LeagueName"];
}

<div class="container">
    <div class="row pt-3">
        <div class="col-6">
            <h2 class="text-primary">
                Dodaj zawodnika do @ViewBag.leagueName
            </h2>
        </div>
        <div class="col-6 text-end">
        </div>
    </div>
    <table id="teamData" class="table table-bordered table-striped" style="width:100%" data-from-addteamtoleague="true" data-from-team-name=@ViewBag.LeagueName data-league-id="@ViewBag.LeagueId">
        <thead>
            <tr>
                <th></th>
                <th>Zdjęcie</th>
                <th>Nazwa</th>
                <th>Opis</th>
                <th></th>
            </tr>
        </thead>
    </table>
    <a asp-controller="League" asp-action="Details" asp-route-leagueId="@ViewBag.LeagueId" class="btn btn-primary">
        Przejdź Ligi @ViewBag.leagueName
    </a>

</div>

@section Scripts{
    @Html.Partial("_NotificationJS");
    @*<script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>*@
    <script src="~/js/team.js"></script>
}
<link rel="stylesheet" type="text/css" href="~/css/player.css" />
<link rel="stylesheet" type="text/css" href="~/css/default.css" />

