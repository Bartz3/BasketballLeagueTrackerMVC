@{
    ViewData["Title"] = "Ligi";
}

@model List<League>

@*<partial name="_Notification" />*@
<div class="container">
    <div class="row pt-3">
        <div class="col-6">
            <h2 class="text-primary">
                Ligi
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="League" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-patch-plus-fill"></i>
                Dodaj nową ligę
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Nazwa</th>
                <th>Opis</th>
                <th>Logo</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var league in Model)
            {
                <tr>
                    <td>
                        <a asp-action="Details" asp-route-leagueId="@league.LeagueId" style="text-decoration:none;color:black">@league.Name</a>    
                    </td>
                    <td>@league.Description</td>
                    <td>
                        @if (league.Logo != null)
                        {
                            <img height="100" width="100" src="data:image/png;base64,@(Convert.ToBase64String(league.Logo))" alt="Team Logo" />
                        }
                    </td>
                    <td>

                        <div class="w-50 btn-group" role="group">
                            <a asp-controller="League" asp-action="Upsert" asp-route-id="@league.LeagueId" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"> Edytuj</i>
                            </a>
                            <a asp-controller="League" asp-action="Delete" asp-route-id="@league.LeagueId" class="btn btn-danger mx-2">
                                <i class="bi bi-trash3 p-2"> Usuń</i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

