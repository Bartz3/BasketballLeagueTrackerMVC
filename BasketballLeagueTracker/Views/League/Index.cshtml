<div class="container mt-5">
    <div class="row">
        <div class="col-12 text-center">
            <h1 class="display-4 mb-4 text-primary">Ligi</h1>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-6">
            <a asp-controller="League" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-patch-plus-fill"></i>
                Dodaj nową ligę
            </a>
        </div>
    </div>
    <div class="row">
        @foreach (var league in Model)
        {
            <div class="col-md-3 mb-4">
                <!-- Zmieniono col-md-4 na col-md-3 -->
                <div class="card h-100">
                    @if (league.Logo != null)
                    {
                        <img src="data:image/png;base64,@(Convert.ToBase64String(league.Logo))" alt="League Logo" class="card-img-top">
                    }
                    <div class="card-body">
                        <h5 class="card-title">@league.Name</h5>
                        <p class="card-text">@league.Description</p>
                    </div>
                    <div class="card-footer">
                        <div class="btn-group" role="group">
                            <a asp-controller="League" asp-action="Details" asp-route-leagueId="@league.LeagueId" class="btn btn-primary">
                                <i class="bi bi-eye"></i> Szczegóły
                            </a>
                            <a asp-controller="League" asp-action="Upsert" asp-route-id="@league.LeagueId" class="btn btn-warning">
                                <i class="bi bi-pencil-square"></i> Edytuj
                            </a>
                            <a asp-controller="League" asp-action="Delete" asp-route-id="@league.LeagueId" class="btn btn-danger">
                                <i class="bi bi-trash3"></i> Usuń
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
