@model League

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Usuń ligę</h2>
            </hr>
        </div>
        @*<div asp-validation-summary="All"></div>*@
        <div class="mb-3 row p-1">
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" disabled class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Description" class="p-0"></label>
            <input asp-for="Description" disabled class="form-control" />
        </div>
                <div class="mb-3 row p-1">
                    <label asp-for="Logo" class="ms-2"></label>
            @if (Model.Logo != null)
            {
                <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Logo)" alt="@Model.Logo" class="img-fluid" style="max-height: 300px;max-width:500px;">
            }
            else
            {
                <span>Brak zdjęcia</span>
            }
                </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Usuń </button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Team" asp-action="Index" class="btn btn-outline-secondary form-control">Wróć do listy zawodników</a>
            </div>

        </div>
    </div>
</form>


