@using BasketballLeagueTracker.ViewModels;
@model ArticleViewModel
@{
    TempData["LeagueId"] = Model.LeagueId;
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">

                <h2 class="text-white py-2"> @(Model.Article != null && Model.Article.ArticleId != 0 ? "Edytuj " : "Dodaj ") artykuł </h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" asp-controller="Article" asp-action="Upsert" class="row" enctype="multipart/form-data">
            <input asp-for="Article.ArticleId" hidden />
            <div class="border p-3">
                @*<div asp-validation-summary="All"></div>*@
                <div class="form-floating py-2 col-12">
                    <input asp-for="Article.Title" class="form-control border-0 shadow" />
                    <label asp-for="Article.Title" class="ms-2"></label>
                    <span asp-validation-for="Article.Title" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <textarea id="summernote" asp-for="Article.Content"
                              class="form-control border-0 shadow">
                    </textarea>
                    <span asp-validation-for="Article.Content" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-6 col-md-3">
                        @if (Model.Article.ArticleId != 0)
                        {
                            <button type="submit" class="btn btn-primary form-control">Edytuj</button>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-primary form-control">Stwórz</button>

                        }
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="League" asp-action="Details" class="btn btn-outline-secondary form-control">Wróć do ligi @Model.LeagueId </a>
                    </div>

                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    <script>
        $(document).ready(function () {
            $('#summernote').summernote({
                placeholder:'Treść artykułu',
                tabsize: 2,
                height: 300

            });
        });
    </script>

}
