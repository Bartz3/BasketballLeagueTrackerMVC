@using BasketballLeagueTracker.Helpers;
@model Player

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@(Model != null && Model.PlayerId != 0 ? "Edytuj" : "Dodaj")zawodnika</h2>

            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3">
                @*<div asp-validation-summary="All"></div>*@
                <div class="form-floating py-2 col-12">
                    <input asp-for="Name" class="form-control border-0 shadow" />
                    <label asp-for="Name" class="ms-2"></label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Surname" class="form-control border-0 shadow" />
                    <label asp-for="Surname" class="ms-2"></label>
                    <span asp-validation-for="Surname" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <select asp-for="Positions" asp-items="@(PlayerPositionsHelper.GetPlayerPositions())" class="form-control border-0 shadow"></select>
                    <label asp-for="Positions" class="ms-2"></label>
                    @*<select asp-for="Positions" asp-items="@(new SelectList(Enum.GetNames(typeof(PlayerPosition))))"></select>*@
                    @*  <select asp-for="Positions" asp-items="Html.GetEnumSelectList<PlayerPosition>()" class="form-control"></select>*@
                </div>
@*                <div class="mb-3 row p-1">
                    <label asp-for="Photo" class="ms-2"></label>
                    <input asp-for="Photo" type="file" class="form-control border-0 shadow" />
                </div>*@
                <div class="row">
                    <div class="col-6 col-md-3">
                        @if (Model!=null && Model.TeamId != 0)
                        {
                            <button type="submit" class="btn btn-primary form-control">Edytuj</button>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-primary form-control">Stwórz</button>

                        }
                        
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Player" asp-action="Index" class="btn btn-outline-secondary form-control">Wróć do listy zawodników</a>
                    </div>

                </div>
            </div>
        </form>
    </div>
</div>



@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial"/>
    }
}

