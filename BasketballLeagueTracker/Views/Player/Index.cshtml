@{
    ViewData["Title"] = "Zawodnicy";
}

@model List<Player>

@*<partial name="_Notification" />*@
<div class="container">
    <div class="row pt-3">
        <div class="col-6">
            <h2 class="text-primary">
                Zawodnicy
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Player" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-patch-plus-fill"></i>
                Dodaj nowego zawodnika
            </a>
            <button id="deleteSelectedBtn" class="btn btn-danger">Usuń zaznaczone</button>

        </div>
    </div>
    <table id="playerData" class="table table-bordered table-striped" style="width:100%;    color:white;" data-from-addplayertoteam="false">
        <thead >
            <tr >
                <th></th>
                <th>Zdjęcie</th>
                <th>Imie</th>
                <th>Nazwisko</th>
                <th>Pozycja</th>
                <th>Drużyna</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

<style>
    #playerData {
        color:white;
        height: 50vh;
        overflow-y: auto; /* Dodaj przewijanie, jeśli zawartość tabeli przekroczy jej wysokość */
    }
</style>
@section Scripts{
    <script src="~/js/player.js"></script>
}
