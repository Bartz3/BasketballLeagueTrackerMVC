@model List<Player>

@*<partial name="_Notification" />*@
<div class="container">
    <div class="row pt-3">
        <div class="col-6">
            <h2 class="text-primary">
                Zawodnicy
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Player" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-patch-plus-fill"></i>
                Dodaj nowego zawodnika
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Imie</th>
                <th>Nazwisko</th>
                <th>Pozycja</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var player in Model)
            {
                <tr>
                    <td>@player.Name</td>
                    <td>@player.Surname</td>
                    <td>@player.Positions</td>
                    <td>

                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Player" asp-action="Edit" asp-route-id="@player.PlayerId" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"> Edytuj</i>
                            </a>
                            <a asp-controller="Player" asp-action="Delete" asp-route-id="@player.PlayerId" class="btn btn-danger mx-2">
                                <i class="bi bi-trash3 p-2"> Usuń</i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

