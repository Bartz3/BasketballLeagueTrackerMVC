@model Player

<div class="player-details">
    @if (Model.Photo != null)
    {
        <img id="player-photo" height="200" width="200" src="data:image/png;base64,@(Convert.ToBase64String(Model.Photo))" />
    }
    else
    {
        <img id="player-photo" src="~/images/default-user.jpg" alt="Domyślne zdjęcie" class="img-fluid" style="max-height: 100%;">
    }
    <div class="player-info">
        <h2>@Model.Name @Model.Surname</h2>
        <div class="player-stats">
            <span><b>Wzrost</b> @Model.Height cm</span>
            <span><b>Waga:</b>@Model.Weight kg</span>
            <span><b>Pozycja:</b> @Model.GetPositionsString(Model.Positions)</span>
        </div>
    </div>
</div>
<div class="player-matches mt-4">
    <h3>Mecze</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Data</th>
                <th>Przeciwnik</th>
                <th>Wynik</th>
                <!-- Inne kolumny -->
            </tr>
        </thead>
        <tbody>
           
                <tr>
                    <td>1</td>
                    <td>2</td>
                    <td>3</td>
                    <!-- Inne dane meczu -->
                </tr>
            
        </tbody>
    </table>
</div>

<div class="col-auto">
    <a asp-controller="Player" asp-action="AddPlayerToFavourites" asp-route-playerId="@Model?.PlayerId" class="btn btn-outline-primary">
        @if (ViewBag.IsFavourite)
        {
            <i class="bi bi-heart-fill"></i>
        }
        else
        {
            <i class="bi bi-heart"> </i>
        }
    </a>
</div>
<style>
    .player-details {
        display: flex;
        align-items: center;
        padding: 20px;
        background-color: #f2f2f2;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.2);
    }

    /* Stylowanie listy meczów */
    .player-matches {
        background-color: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.2);
        margin-top: 20px;
    }

        .player-matches h3 {
            margin-bottom: 15px;
        }
    #player-photo { /* Zmieniono .player-photo na #player-photo */
        width: 200px; /* Dostosuj do potrzeb */
        height: auto;
        margin-right: 20px; /* Odstęp między zdjęciem a informacjami o zawodniku */
        border: 2px outset black;
    }

    .player-info h2 {
        margin: 0;
        font-size: 60px;
    }

    .player-stats {
        font-size: 0.95em; /* Mniejsza czcionka dla statystyk zawodnika */
        display: flex;
        gap: 15px; /* Odstęp między statystykami */
    }

</style>

<a asp-action="Index">Powrót do listy</a>

<link rel="stylesheet" type="text/css" href="~/css/default.css" />
<link rel="stylesheet" type="text/css" href="~/css/playerDetails.css" />