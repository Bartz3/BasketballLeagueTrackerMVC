@inject SignInManager<ApplicationUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}

<div class="nav flex-column nav-pills mb-3">
    <a class="nav-link rounded-pill mb-2 shadow-sm @ManageNavPages.FavouritesNavClass(ViewContext)" id="favourites" asp-page="./Favourites">
        <i class="fas fa-star mr-2"></i> Ulubione
    </a>
    <a class="nav-link rounded-pill mb-2 shadow-sm @ManageNavPages.IndexNavClass(ViewContext)" id="profile" asp-page="./Index">
        <i class="fas fa-user mr-2"></i> Profil
    </a>
    <a class="nav-link rounded-pill mb-2 shadow-sm @ManageNavPages.EmailNavClass(ViewContext)" id="email" asp-page="./Email">
        <i class="fas fa-envelope mr-2"></i> Email
    </a>
    <a class="nav-link rounded-pill mb-2 shadow-sm @ManageNavPages.ChangePasswordNavClass(ViewContext)" id="change-password" asp-page="./ChangePassword">
        <i class="fas fa-key mr-2"></i> Hasło
    </a>
    @if (hasExternalLogins)
    {
        <a id="external-login" class="nav-link rounded-pill mb-2 shadow-sm @ManageNavPages.ExternalLoginsNavClass(ViewContext)" asp-page="./ExternalLogins">
            <i class="fas fa-external-link-alt mr-2"></i> Zewnętrzne logowanie
            </a>
    }
</div>
